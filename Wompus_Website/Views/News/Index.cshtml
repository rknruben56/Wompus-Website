@model PagedList.IPagedList<Wompus_Website.Models.News>
@using PagedList.Mvc;
    
    @{
        ViewBag.Title = "News";
    }
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <style>
        .news-wrapper {
            float: left;
            width: 660px;
            padding-top: 10px;
        }



        .news-content {
            background-color: #000;
            float: left;
            margin: 0 0 20px;
            padding: 20px 20px 0;
            width: 660px;
        }

        .description {
            color: white;
        }

        .publish-time {
            color: white;
            font-size: .8em;
        }

        .pagination-wrapper {
            padding-top: 15px;
            clear: both;
        }

        .create-link-wrapper {
            padding-top: 15px;
            position: relative;
        }
    </style>
<h2>Updates</h2>

<div class="news-wrapper">
    @foreach (var item in Model)
    {
        <div class="news-content">
            <h2>
                @Html.DisplayFor(modelItem => item.title)
            </h2>
            <h3>
                @Html.DisplayFor(modelItem => item.Description)
            </h3>
            <p class="publish-time">
                @Html.DisplayFor(modelItem => item.PublishTime)
            </p>
           @{
               if(WebSecurity.IsAuthenticated)
               {
                    <p>
                        @Html.ActionLink("Edit", "Edit", new { id = item.UpdateID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.UpdateID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.UpdateID })
                    </p>
               }
           }
        </div>
    }
</div>
<div class="pagination-wrapper">
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>

@{
    if (WebSecurity.IsAuthenticated)
    {
       <div class="create-link-wrapper">
            @Html.ActionLink("Create New", "Create")
       </div> 
    }
}