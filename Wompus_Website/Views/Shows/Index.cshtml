@model PagedList.IPagedList<Wompus_Website.Models.Show>
@using PagedList.Mvc;
<title>@ViewBag.Title = "Shows"</title>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
<style>
    .shows-content {
        -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=72)";
        filter: alpha(opacity=72);
        -moz-opacity: 0.72;
        -khtml-opacity: 0.72;
        opacity: 0.72;
        border: 1px #888888 solid;
        background-color: #080707;
        margin: 0 0 20px;
        padding: 20px 20px 0;
    }

    .description {
        color: white;
    }

    .pagination-wrapper {
        clear: both;
    }

    .create-link-wrapper {
        padding-top: 15px;
    }
</style>

<h2>Shows</h2>
    @foreach (var item in Model)
    {
        <div class="shows-content">
            <h2>
                @Html.DisplayFor(modelItem => item.Title)
            </h2>
            <h3>
                @Html.Raw(item.Location.ToString())
            </h3>
            <h3>
                @item.ShowDate.ToString("dddd MMMM dd yyyy")
            </h3>
            <p class="description">
                @Html.Raw(item.Description.ToString())
            </p>
            @{
                if (WebSecurity.IsAuthenticated)
                {
                    <p>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ShowID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ShowID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ShowID })
                    </p>
                }
}
        </div>
    }
<div class="pagination-wrapper">
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>

@{
    if (WebSecurity.IsAuthenticated)
    {
        <div class="create-link-wrapper">
            @Html.ActionLink("Create New", "Create")
        </div>
    }
}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="Scripts/jquery.fitvids.js"></script>
<script>
    $(document).ready(function () {
        $(".shows-content").fitVids();
    });
</script>
