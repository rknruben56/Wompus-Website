@model IEnumerable<Wompus_Website.Models.Show>

<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
<style>
    .shows-wrapper {
        padding-top: 10px;
    }
    .shows-content {
        -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=72)";
        filter: alpha(opacity=72);
        -moz-opacity: 0.72;
        -khtml-opacity: 0.72;
        opacity: 0.72;
        border: 1px #888888 solid;
        background-color: #080707;
        margin: 0 0 20px;
        padding: 20px 20px 0;
    }

    .description {
        color: white;
    }

    .pagination-wrapper {
        clear: both;
    }

    .create-link-wrapper {
        padding-top: 15px;
    }
</style>

<div class="shows-wrapper">
    <h2>
        Next Show!
    </h2>
    @foreach (var item in Model)
    {
        <div class="shows-content">
            <h2>
                @Html.DisplayFor(modelItem => item.Title)
            </h2>
            <h3>
                @Html.Raw(item.Location.ToString())
            </h3>
            <h3>
                @Html.DisplayFor(modelItem => item.ShowDate, "ShortDateTime")
            </h3>
            <p class="description">
                @Html.Raw(item.Description.ToString())
            </p>
            @{
        if (WebSecurity.IsAuthenticated)
        {
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = item.ShowID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ShowID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ShowID })
            </p>
        }
            }
        </div>
    }
</div>

