@model IEnumerable<Wompus_Website.Models.Show>

<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
<style>
    .shows-wrapper {
        float: left;
        width: 660px;
        padding-top: 10px;
    }

    .shows-content {
        background-color: #000;
        float: left;
        margin: 0 0 20px;
        padding: 20px 20px 0;
        width: 660px;
    }

    .description {
        color: white;
    }

    .pagination-wrapper {
        clear: both;
    }

    .create-link-wrapper {
        padding-top: 15px;
    }
</style>

<div class="shows-wrapper">
    <h2>
        Recent Show!
    </h2>
    @foreach (var item in Model)
    {
        <div class="shows-content">
            <h2>
                @Html.DisplayFor(modelItem => item.Title)
            </h2>
            <h3>
                @Html.DisplayFor(modelItem => item.Location)
            </h3>
            <h3>
                @Html.DisplayFor(modelItem => item.ShowDate, "ShortDateTime")
            </h3>
            <p class="description">
                @Html.DisplayFor(modelItem => item.Description)
            </p>
            @{
        if (WebSecurity.IsAuthenticated)
        {
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = item.ShowID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ShowID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ShowID })
            </p>
        }
            }
        </div>
    }
</div>

