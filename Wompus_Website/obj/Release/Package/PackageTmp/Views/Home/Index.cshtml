@model IEnumerable<Wompus_Website.Models.News>

@{
    ViewBag.Title = "Home Page";
}
@Styles.Render("~/Content/css")

<div class="container">
    <div id="slides">
        <img src="https://farm3.staticflickr.com/2932/13900650141_250ef77fed.jpg" alt="Oops_1">
        <img src="https://farm4.staticflickr.com/3697/13923775255_d6cabed5f8.jpg" alt="Oops_2">
        <img src="https://farm8.staticflickr.com/7152/13923830503_25dff782d1.jpg" alt="Oops_3">
        <img src="https://farm4.staticflickr.com/3725/13900648851_09037c9e47.jpg" alt="Oops_4">
    </div>
</div>
@Html.Action("_News")

@Html.Action("_Music")
<script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
<script src="Scripts/jquery.slides.min.js"></script>
<script>
    $(function () {
        $('#slides').slidesjs({
            width: 940,
            height: 400,
            pagination: false,
            navigation: false,
            play: {
                active: false,
                auto: true,
                interval: 4000,
                swap: true
            }
        });
    });
</script>







