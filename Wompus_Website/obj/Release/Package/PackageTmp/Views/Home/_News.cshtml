@model IEnumerable<Wompus_Website.Models.News>

<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
<style>
    .news-wrapper {
        float: left;
        width: 700px;
        padding-top: 10px;
    }

    .news-content {
        background-color: #000;
        float: left;
        margin: 0 0 20px;
        padding: 20px 20px 0;
        width: 660px;
    }

    .description {
        color: white;
    }

    .publish-time {
        color: white;
        font-size: .8em;
    }

    .pagination-wrapper {
        padding-top: 15px;
        position: relative;
    }

    .create-link-wrapper {
        padding-top: 15px;
        position: relative;


    }
</style>
@if (Model != null)
{
    <div class="news-wrapper">
        <h2>Latest Update!</h2>

        @foreach (var item in Model)
        {
            <div class="news-content">
                <h2>
                    @Html.DisplayFor(modelItem => item.title)
                </h2>
                <h3>
                    @Html.DisplayFor(modelItem => item.Description)
                </h3>
                <h3>
                    @Html.DisplayFor(modelItem => item.PublishTime)
                </h3>
            </div>
        }
    </div>   
}
